<div class="cont" id="cont">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-xs-12 col-lg-6" id="one">
        <h1>Need some Help ?</h1>
        <p>
          We are Always there to Help, leave a Message
        </p>
        <form method="post" action="/users/contact">
          {{#if success_msg}}
              <div class="alert alert-success">{{success_msg}}</div>
          {{/if}}
          {{#if error_msg}}
              <div class="alert alert-danger">{{error_msg}}</div>
          {{/if}}
          {{#if error}}
              <div class="alert alert-danger">{{error}}</div>
          {{/if}}
          <div class="form-group">
            <label>Name :</label>
            <input type="text" class="form-control" name="name1" placeholder="Enter User Name" required>
          </div>
          <div class="form-group">
            <label>Message :</label>
            <textarea class="form-control" cols="80" rows="6" name="message" placeholder="Enter Message" required></textarea>
            <button type="submit" class="btn btn-lg btn-primary" id="bu">Submit Message <span class="glyphicon glyphicon-send"></span></button>
          </div>
        </form>
      </div>
      <div class="col-md-6 col-xs-12 col-lg-6">
        <h1>Listening from You is Awesome..!!</h1>
        <h2>Contact Us</h2>
        <i class="fa fa-reply-all" aria-hidden="true"></i>
        <h4>9400 WADE BLVD</h4>
      </div>
    </div>
  </div>
</div>
